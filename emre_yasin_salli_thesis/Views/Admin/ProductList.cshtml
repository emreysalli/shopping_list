@model List<Product>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Products</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/productcreate">Add Product</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 50px;">Id</th>
                    <th style="width: 200px;">Image</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {


                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.ProductId</th>
                            <td><img src="@item.Image" width="80" alt=""></td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/productedit/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/admin/deleteproduct" method="post" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <button type="submit" href="#" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Products</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>
