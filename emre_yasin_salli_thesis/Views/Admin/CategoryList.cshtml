@model List<Category>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Categories</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/categorycreate">Add Category</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 50px;">Id</th>
                    <th>Name</th>
                    <th style="width: 200px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {


                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.CategoryId</th>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/categoryedit/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/admin/deletecategory" method="post" style="display: inline;">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">
                                    <button type="submit" href="#" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Categories</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>