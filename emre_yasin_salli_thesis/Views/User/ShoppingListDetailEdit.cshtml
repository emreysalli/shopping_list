@model ShoppingListDetail

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="@ViewBag.Product.Image" class="card-img" alt="">
            </div>
            <div class="col-md-9">

                <h5 class="card-title">
                    @ViewBag.Product.Name
                </h5>

                <form asp-controller="user" asp-action="shoppinglistdetailedit" method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" name="ShoppingListDetailId" value="@Model.ShoppingListDetailId">
                    <input type="hidden" name="ShoppingListId" value="@Model.ShoppingListId">
                    <div class="form-group row" style="margin-top: 20px;">
                        <label asp-for="Explanation" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Explanation">
                            <span asp-validation-for="Explanation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-top: 20px;">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Update Detail</button>
                        </div>
                    </div>

                </form>


            </div>
        </div>
    </div>
</div>