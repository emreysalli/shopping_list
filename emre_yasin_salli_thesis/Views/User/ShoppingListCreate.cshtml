@model ShoppingList

<h1 class="h3">Create Shopping List</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="User" asp-action="ShoppingListCreate" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row" style="margin-top: 20px;">
                <label asp-for="ListName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ListName">
                    <span asp-validation-for="ListName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row" style="margin-top: 20px;">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Shopping List</button>
                </div>
            </div>

        </form>
    </div>
</div>

